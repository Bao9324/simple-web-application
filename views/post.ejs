<%- include header %>

<script type="text/javascript" src="bootstrap.min.js"></script>
    <script type="text/javascript">
      function checkFile(){
        var filename = document.getElementById('userPhoto').value;
        if(filename.endsWith('.jpg') || filename.endsWith('.png') || filename.endsWith('.gif')) {
          document.getElementById('uploadForm').submit();
        }
        else{
          document.getElementById('userPhoto').value = '';
          alert('Sorry, this web app can only upload JPG, GIF and PNG files!');
        }
      }
    </script>
    <div class="container">
        <div class="jumbotron">
          <div class="row"></div>
          <form id="uploadForm" name="form" enctype="multipart/form-data" action="/api/photo" method="post">
            <div class="form-group row">
              <input class="form-control-file" type="file" id="userPhoto" name="userPhoto" />
            </div>
            <div class="form-group row">
              <div class="col-md-4">
                <label> Tag: </label> <input type="text" name="caption" />
              </div>
              <div class="col-md-4">
                <input type="button" onclick="checkFile();" class="btn btn-sm btn-success" value="submit" />
              </div>
            </div>
          </form>
        </div>
    </div>
<%- include footer %>